<?xml version="1.0" encoding="UTF-8" ?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="agenda-telefonica-PU" transaction-type="RESOURCE_LOCAL">
	
		<properties>
		
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/crud_aluno?useTimezone=true&amp;serverTimezone=UTC&amp;createDatabaseIfNotExist=true"></property>
			<property name="javax.persistence.jdbc.user" value="root"></property>
			<property name="javax.persistence.jdbc.password" value="admin"></property>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"></property>
			<property name="hibernate.hbm2ddl.auto" value="update"></property>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"></property>
			<property name="hibernate.show_sql" value="true"></property>
		
		</properties>
	
	</persistence-unit>

</persistence>